extends layout

block head
	title= picObject.image.get("name")+' | Pictroid'
	
block variables
	- var headerClasses = 'navbar-absolute'

block content
	+chickenLittle()
	.page
		.container.image-page
			h1.image-title= picObject.image.get("name")
			hr
			img.image-image(src=picObject.src.get("src"), alt=picObject.image.get("name"))
			.image-stats
				.image-by
					i by&nbsp;
					a(href="#") username
				.image-tags
					.tag #foo
					.tag #bar
				.image-social
					ul(class="details")
						li(class="views")
							if(picObject.image.get("views"))
								span= picObject.image.get("views")
							else 
								| 0
						li(class="comments")
							if(picObject.image.get("commentCount"))
								span= picObject.image.get("commentCount")
							else 
								| 0
			.image-details
				.image-description 
					p= picObject.image.get("description")
				.image-comments
					h2 Comment on this pic
					if !authed
						p.image-comments-notice Please <a href="/signin">Sign In</a> or 
							<a href="/signup">Sign Up</a> to comment.
