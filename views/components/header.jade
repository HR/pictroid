// Header
mixin headerItems
	div.container
		div.navbar-header
			button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href="/") 
				if header && header.dark
					img(src="images/logo/light.png", alt="Pictroid")
				else					
					img(src="images/logo/dark.png", alt="Pictroid")
		div.navbar-collapse.collapse
			ul.nav.navbar-nav.navbar-right
				li
					a(href="/") Home
				li.browse
					a.dropdown-toggle(href="#", data-toggle="dropdown") Browse 
						b.caret
					ul.dropdown-menu
						li
							a(href="/browse?sort=trending") Trending
						li
							a(href="/browse?sort=rated") Highest Rated
						li
							a(href="/browse?sort=latest") Latest feed
						li
							a(href="/browse?sort=categories") Categories
				li
					a(href="/about") About
				li
					a.btn(href="/signin") Sign In
				
if header && header.transparent
	if header.dark
		div.navbar.navbar-default.navbar-fixed-top.navbar-transparent(role='navigation')
			+headerItems()
	else 
		div.navbar.navbar-default.navbar-fixed-top.navbar-transparent-light(role='navigation')
			+headerItems()		
else 
	div.navbar.navbar-default.navbar-fixed-top(role='navigation')
		+headerItems()
	.navbar-fix